<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_dark" />

        <RelativeLayout
            android:id="@+id/main_rl_getCardId"
            style="@style/rlStyleMenuItem">

            <ImageView
                android:id="@+id/main_iv_getCardId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tu_icon" />


            <TextView
                android:id="@+id/main_tv_gardId"
                style="@style/tvStyleDark16"
                android:layout_toLeftOf="@+id/main_iv_getCardId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp" />

            <TextView
                style="@style/tvStyleDark16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="获取卡号" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_dark" />

        <RelativeLayout
            android:id="@+id/main_rl_setSector"
            style="@style/rlStyleMenuItem">

            <ImageView
                android:id="@+id/main_iv_setSector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tu_icon" />

            <TextView
                android:id="@+id/main_tv_sector"
                style="@style/tvStyleDark16"
                android:layout_toLeftOf="@+id/main_iv_setSector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="11" />

            <TextView
                style="@style/tvStyleDark16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="选择扇区" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_dark" />

        <RelativeLayout
            android:id="@+id/main_rl_getAuth"
            style="@style/rlStyleMenuItem">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tu_icon" />

            <TextView
                style="@style/tvStyleDark16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="获取授权" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_dark" />

        <RelativeLayout
            android:id="@+id/main_rl_read_card"
            style="@style/rlStyleMenuItem">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tu_icon"
                android:layout_alignParentEnd="true" />

            <TextView
                style="@style/tvStyleDark16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="读卡" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_dark" />
        <RelativeLayout
            android:id="@+id/main_rl_write_card"
            style="@style/rlStyleMenuItem">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tu_icon" />

            <TextView
                style="@style/tvStyleDark16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="写卡" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_dark" />

        <RelativeLayout
            android:id="@+id/main_rl_setAuthCard"
            style="@style/rlStyleMenuItem">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tu_icon" />

            <TextView
                style="@style/tvStyleDark16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设置授权卡" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_dark" />

        <RelativeLayout
            android:id="@+id/main_rl_cancel_card"
            style="@style/rlStyleMenuItem">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tu_icon" />

            <TextView
                style="@style/tvStyleDark16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="注销卡片" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_dark" />
    </LinearLayout>

</ScrollView>